define(delay,#%arg1) // Adjust delay its very possible due to ping/lag you might lose the potential you want
[Enable]
Alloc(Hook,128)
Label(Return)
Label(Exit)
Label(ResetAbility)
alloc(timer,4)

Hook:
mov ecx,[0317C6B4] // TSingleton::CWvsContext 8B 0D ?? ?? ?? ?? 50 E8 ?? ?? ?? ?? 8D 4D ?? E8 ?? ?? ?? ?? 8B 4D ?? 64 89 0D ?? ?? ?? ?? 59
pushad
call 025DA3D0 // CWvsContext::GetCharacterPotentialGrade E8 ? ? ? ? 6A 00 83 F8 01 0F 8D (address in call)
cmp eax,3 //Legendary
je Exit

call 02447E50 // get_update_time: e8 ? ? ? ? 8b 0d ? ? ? ? 8b d8 8d 45 ? 50 e8 ? ? ? ? 8b 7d (address in call)
mov edx,eax
sub edx,[timer]
cmp edx,delay
jl Exit
mov [timer],eax

ResetAbility:
mov ecx,[0317C6B4] // TSingleton::CWvsContext
push 00
push 00
push 00
push 00
call 02649DB0 // E8 ? ? ? ? 83 C4 04 E9 ? ? ? ? 68 ? ? 00 00 8d ? ? E8 ? ? ? ? FF 75 08 [function start]

Exit:
popad
jmp Return

02253BF3: // 56 8B F1 8B 0D ? ? ? ? E8 ? ? ? ? 85 C0 75 02 [address of mov ecx below]
jmp Hook
nop
Return:

02649F82: // "Auto Yes" E8 ? ? ? ? 83 C4 1C 83 F8 06 0F 95 ? ? 8B
mov eax,6

0234AA50: // "No Reset Prompt" 6A 00 6A 00 6A 00 0FB6 C0 50 [FUNCTION START]
ret 4

[Disable]
02253BF3:
mov ecx,[0317C6B4]

02649F82:
call 024684A0

0234AA50:
push ebp
mov ebp,esp
